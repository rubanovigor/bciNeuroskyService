<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blacksquare"
    tools:context="com.aiworker.bcineuroskyservice.MainActivity" >

	<TextView
        android:id="@+id/text_view_header"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
  		android:gravity="center_horizontal"
  		android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="mindhack.me\napps for brain fitnes\nusing Neurosky Mindwave Mobile" />

    
      <Button
          android:id="@+id/start_AttSierpF"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_above="@+id/start_MindOS"       
          android:gravity="center"
          android:onClick="onClickStart_AttSierpF"
          android:text="Att SierpF\nalgorithm1"
          android:textColor="#000000" 
          android:textSize="17sp" 
          android:visibility="visible" />
      
      <Button
          android:id="@+id/start_AttVividF"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/start_AttSierpF"       
          android:gravity="center"
          android:onClick="onClickStart_AttVividF"
          android:text="Att SierpF\nalgorithm2"
          android:textColor="#0F0000" 
          android:textSize="17sp" 
          android:visibility="visible" />
      
      <Button
          android:id="@+id/start_NetworkGame"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"      
          android:gravity="center"
          android:onClick="onClickStart_NetworkGame"
          android:text="start Network\nGame Sample"
          android:textColor="#0F0F00"
          android:textSize="17sp" 
          android:visibility="visible" />
      
      <ImageButton
          android:id="@+id/start_MindOS"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:onClick="onClickStart_MindOS"
          android:text="MindOS"
          android:textColor="#FF0000" 
          android:visibility="visible"
          android:background="@drawable/icon_mind_os" />     


</RelativeLayout>


