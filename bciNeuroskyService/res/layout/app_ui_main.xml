<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blacksquare"
    tools:context="com.aiworker.bcineuroskyservice.MainActivity" >

	<TextView
        android:id="@+id/text_view_header"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
  		android:gravity="center_horizontal"
  		android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:text="mindhack.me service for collecting data" />

      
     <ToggleButton
           android:id="@+id/switch_backend"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_below="@+id/text_view_header"
           android:layout_alignParentRight="true"
           android:layout_marginTop="5dp"
           android:textOff="backend"
		   android:textOn="backend" 
		   android:onClick="onSwitchClickedBackEnd"
		   android:textSize="10sp" 
		   android:visibility="visible"	/>
          
     <ImageButton
		    android:id="@+id/ib_backend_settings"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@+id/switch_backend"
		    android:layout_marginTop="5dp"
		    android:background="@android:color/transparent"
		    android:src="@drawable/settings"
		    android:onClick="onImageButtonBackendSettings_Clicked" />
     		
     	
     <ToggleButton
           android:id="@+id/switch_service"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/text_view_header"
           android:layout_alignParentLeft="true"
           android:layout_marginTop="5dp"
           android:textOff="service off"
		   android:textOn="service on" 
		   android:onClick="onSwitchClickedService"
		   android:visibility="visible"	/>

      
     <TextView
           android:id="@+id/NeuroskyStatus"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/text_view_header"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="54dp"
           android:padding="5dip"
           android:text="Neurosky Status"
           android:gravity="center_horizontal"
           android:textColor="#ffffff"
           android:textSize="12sp" />

       <TextView
           android:id="@+id/Att_label"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_alignBottom="@+id/NeuroskyStatus"
           android:layout_alignParentLeft="true"
           android:padding="5dip"
           android:text="ATT"
           android:textColor="#ffffff"
           android:textSize="12sp" />
       
       <TextView
           android:id="@+id/Med_lable"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="5dip"
           android:text="MED"
           android:layout_centerVertical="true"
           android:layout_alignBottom="@+id/NeuroskyStatus"
		   android:layout_alignParentRight="true"
           android:textColor="#ffffff"
           android:textSize="12sp" />

		<ImageButton
		    android:id="@+id/ib_info"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/NeuroskyStatus"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="20dp"
		    android:background="@android:color/transparent"
		    android:src="@drawable/ic_info"
		    android:onClick="onImageButtonInfo_Clicked" />

		<ImageButton
		    android:id="@+id/ib_s"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="20dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:background="@android:color/transparent"
		    android:src="@drawable/ic_s"
		    android:onClick="onImageButtonS_Clicked" />

		<ImageButton
		    android:id="@+id/ib_att"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@+id/ib_s"
		    android:layout_centerVertical="true"
		    android:background="@android:color/transparent"
		    android:src="@drawable/ic_a" 
		    android:onClick="onImageButtonA_Clicked"/>

		<ImageButton
		    android:id="@+id/ib_med"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/ib_s"
		    android:layout_centerVertical="true"
		    android:background="@android:color/transparent"
		    android:src="@drawable/ic_m" 
		    android:onClick="onImageButtonM_Clicked"/>

		<ImageButton
		    android:id="@+id/ib_mOS"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@android:color/transparent"
		    android:src="@drawable/ic_mos"
		    android:layout_toLeftOf="@+id/ib_s"
		    android:layout_centerVertical="true"
		    android:visibility="invisible"	
		    android:onClick="onImageButtonMindOS_Clicked" />

		<ImageButton
		    android:id="@+id/ib_twotoroids"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="30dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:background="@android:color/transparent"
		    android:src="@drawable/ic_twotoroids" 
		    android:visibility="invisible" 
		    android:onClick="onImageButtonTwoToroids_Clicked" />

		<ImageButton
		    android:id="@+id/ib_onetoroid"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@+id/ib_s"
		    android:layout_centerVertical="true"
		    android:background="@android:color/transparent"
		    android:src="@drawable/ic_onetoroid" 
		    android:visibility="invisible" 
		    android:onClick="onImageButtonOneToroid_Clicked"  />

		<ImageButton
		    android:id="@+id/ib_back"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/ib_s"
		    android:layout_centerVertical="true"
		    android:background="@android:color/transparent"
		    android:src="@drawable/ic_back" 
		    android:visibility="invisible"  
		    android:onClick="onImageButtonBack_Clicked" />

		<ImageButton
		    android:id="@+id/ib_toroid"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="20dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:background="@android:color/transparent"
		    android:src="@drawable/ic_toroid"
		    android:visibility="invisible" 
		    android:onClick="onImageButtonToroid_Clicked"   />
		
		 <TextView
           android:id="@+id/tv_test"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="5dip"
           android:text="test field"
           android:gravity="center"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:textColor="#ffffff"
           android:textSize="12sp" 
           android:visibility="visible" />
		
</RelativeLayout>
