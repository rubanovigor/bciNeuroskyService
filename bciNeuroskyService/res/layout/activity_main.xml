<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blacksquare"
    tools:context="com.aiworker.bcineuroskyservice.MainActivity" >

	<TextView
        android:id="@+id/text_view_header"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
  		android:gravity="center_horizontal"
  		android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="mindhack.me\nservice for collecting data\nfor Neurosky Mindwave Mobile" />


	 <Button
         android:id="@+id/stop_service"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/text_view_header"
         android:layout_centerHorizontal="true"
         android:gravity="center"
         android:onClick="onClickStopService"
         android:text="Stop Service" 
         android:textColor="#000000"
         android:visibility="invisible"/>

     <Button
         android:id="@+id/start_service"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/text_view_header"
         android:layout_centerHorizontal="true"
         android:onClick="onClickStartServie"
         android:textColor="#000000"
         android:text="Start Service" />

     <Button
          android:id="@+id/send_message"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:layout_marginTop="5dp"
          android:gravity="center"
          android:onClick="onClickSendMessage"
          android:text="Submit Current Activity"
          android:textColor="#000000" 
          android:visibility="invisible"/>
    
      <ImageButton
          android:id="@+id/start_activity_apps"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"       
          android:gravity="center"
          android:onClick="onClickStart_activity_apps"
          android:text="apps"
          android:textColor="#000000" 
          android:background="@drawable/icon_apps"
          android:visibility="invisible" />
      


       <TextView
           android:id="@+id/NeuroskyStatus"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/text_view_header"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="54dp"
           android:padding="5dip"
           android:text="Neurosky Status"
           android:gravity="center_horizontal"
           android:textColor="#ffffff"
           android:textSize="12sp" />

       <TextView
           android:id="@+id/Att_label"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/NeuroskyStatus"
           android:layout_alignBottom="@+id/NeuroskyStatus"
           android:layout_alignParentLeft="true"
           android:padding="5dip"
           android:text="ATT"
           android:textColor="#ffffff"
           android:textSize="12sp" />
       
       <TextView
           android:id="@+id/Med_lable"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="5dip"
           android:text="MED"
           android:layout_alignBaseline="@+id/NeuroskyStatus"
           android:layout_alignBottom="@+id/NeuroskyStatus"
		   android:layout_alignParentRight="true"
           android:textColor="#ffffff"
           android:textSize="12sp" />
       
        <TextView
           android:id="@+id/TextCurrentActivityInfo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="5dip"
           android:text="please type DEFAULT if you don't want to specify your activity\ncurrently user activity recoded as:"
           android:gravity="center"
           android:layout_centerHorizontal="true"
           android:layout_above="@+id/editTextCurrentActivity"
           android:textColor="#ffffff"
           android:textSize="12sp" 
           android:visibility="visible" />

       <EditText
           android:id="@+id/editTextCurrentActivity"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:maxLines="1"
           android:text="default"
           android:gravity="center"      
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="16dp"
           android:ems="10"  
           android:visibility="invisible"  />

       <Switch
           android:id="@+id/switch_backend"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/NeuroskyStatus"
           android:layout_centerHorizontal="true"
           android:textOff="backend"
		   android:textOn="backend" 
		   android:onClick="onSwitchClicked"	/>

</RelativeLayout>


